generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum PostStatus {
  NEEDS_REVIEW
  REVISION_REQUESTED
  APPROVED
  REJECTED
}

enum ScheduleStatus {
  NEEDS_REVIEW
  REVISION_REQUESTED
  APPROVED
  REJECTED
}

enum TaskStatus {
  PENDING
  DONE
  SKIPPED
}

enum EvidenceType {
  COMMIT
  PULL_REQUEST
  RELEASE
  DOCUMENTATION
}

enum EvidenceScope {
  FULL
  DAYS
  COMMITS
}

model Project {
  id        String             @id @default(cuid())
  name      String
  tag       String             @unique
  briefs    Brief[]
  posts     Post[]
  schedules ScheduleProposal[]
  tasks     Task[]
  repos     RepoAccess[]
}

model RepoAccess {
  id               String   @id @default(cuid())
  repo             String
  projectTag       String
  enabled          Boolean  @default(true)
  triggerPosts     Boolean  @default(true)
  triggerSchedules Boolean  @default(false)
  triggerTasks     Boolean  @default(false)
  projectId        String?
  project          Project? @relation(fields: [projectId], references: [id])
  briefs           Brief[]
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model Brief {
  id        String   @id @default(cuid())
  projectId String
  evidenceBundleId String?
  sourceRepoId String?
  summary   String
  createdAt DateTime @default(now())
  project   Project  @relation(fields: [projectId], references: [id])
  evidenceBundle EvidenceBundle? @relation(fields: [evidenceBundleId], references: [id])
  sourceRepo RepoAccess? @relation(fields: [sourceRepoId], references: [id])
}

model Post {
  id        String      @id @default(cuid())
  projectId String
  platform  String
  title     String
  status    PostStatus
  postJson  Json
  claims    String[]
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  project   Project     @relation(fields: [projectId], references: [id])
  scheduleItems ScheduleItem[]
}

model ScheduleProposal {
  id        String         @id @default(cuid())
  projectId String
  status    ScheduleStatus
  items     ScheduleItem[]
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
  project   Project        @relation(fields: [projectId], references: [id])
}

model ScheduleItem {
  id                 String            @id @default(cuid())
  scheduleProposalId String
  postId            String
  channel            String
  scheduledFor       DateTime
  scheduleProposal   ScheduleProposal  @relation(fields: [scheduleProposalId], references: [id])
  post              Post?            @relation(fields: [postId], references: [id])
}

model Task {
  id        String     @id @default(cuid())
  projectId String
  title     String
  status    TaskStatus
  dueAt     DateTime
  copyText  String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  project   Project    @relation(fields: [projectId], references: [id])
}

model AuditLog {
  id         String   @id @default(cuid())
  createdAt  DateTime @default(now())
  actor      String
  action     String
  entityType String
  entityId   String
  note       String?
  metadata   Json?
}

model EvidenceBundle {
  id           String         @id @default(cuid())
  repoId       String
  repoFullName String
  scope        EvidenceScope
  scopeValue   Int?
  scopePage    Int?
  autoSelected Boolean        @default(false)
  createdAt    DateTime       @default(now())
  items        EvidenceItem[]
  briefs       Brief[]
}

model EvidenceItem {
  id         String       @id @default(cuid())
  bundleId   String
  type       EvidenceType
  title      String
  body       String?
  url        String?
  occurredAt DateTime
  content    String?
  metadata   Json?
  bundle     EvidenceBundle @relation(fields: [bundleId], references: [id], onDelete: Cascade)
}

model GitHubInstallation {
  id             String       @id @default(cuid())
  installationId Int          @unique
  accountLogin   String
  accountType    String
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  repos          GitHubRepo[]
}

model GitHubRepo {
  id              String             @id @default(cuid())
  repoId          Int                @unique
  fullName        String
  name            String
  private         Boolean
  ownerLogin      String
  selected        Boolean            @default(false)
  lastSeenAt      DateTime?
  createdAt       DateTime           @default(now())
  updatedAt       DateTime           @updatedAt
  installationId  String
  installation    GitHubInstallation @relation(fields: [installationId], references: [id], onDelete: Cascade)
}
